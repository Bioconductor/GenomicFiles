import(methods)
import(BiocGenerics)
import(SummarizedExperiment)
import(Rsamtools)
import(rtracklayer)
import(BiocParallel)
import(GenomicRanges)
import(IRanges)
import(S4Vectors)
import(GenomeInfoDb)
importFrom(GenomicAlignments, summarizeOverlaps, Union)
importMethodsFrom(GenomicAlignments, summarizeOverlaps)
importFrom(Biobase, samples)
importFrom(VariantAnnotation, 
    scanVcfHeader, ScanVcfParam, readVcf, genotypeToSnpMatrix, "vcfSamples"
)

### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export S4 classes
###

exportClasses(
    GenomicFiles, 
    GenomicFileViews, 
    BamFileViews, 
    FaFileViews, 
    BigWigFileViews,
    VcfStack, RangedVcfStack
)

### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export S4 methods for generics not defined in GenomicFiles
###

exportMethods(
    "[", dim, names, show, yieldSize, 'colData<-',
    countBam, scanBam, summarizeOverlaps,
    coverage, summary,

    samples
)

### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export S4 generics & methods for generics defined in GenomicFiles
###

export(
    ## GenomicFileViews class:
    BamFileViews, BigWigFileViews, FaFileViews, 

    ## GenomicFiles class:
    GenomicFiles, files, 'files<-',

    reduceByFile, reduceByRange, pack, unpack,

    ## VcfStack class:
    subsetSample, features, assay, bindRanges, bindSampleNames
)

exportMethods(
    ## GenomicFileViews class:
    BamFileViews, BigWigFileViews, FaFileViews,

    ## GenomicFiles class
    GenomicFiles, files, 'files<-', 

    reduceByFile, reduceByRange, pack, unpack,

    ## VcfStack class:
    subsetSample, features, assay, bindRanges, bindSampleNames
)

### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export non-generic functions
###

export(
    ## GenomicFileViews class:
    fileList, "fileList<-", fileSample, "fileSample<-", 
    fileRange, "fileRange<-", fileExperiment, "fileExperiment<-",

    ## file registry:
    .fileTypeRegistry, registerFileType, findTypeRegistry, makeFileType,

    reduceFiles, reduceRanges, reduceByYield, REDUCEsampler,

    VcfStack, paths1kg
)
